# Basic posture
REGION=ap-northeast-1
AWS_PROFILE=_profile_name_
USE_LOCALSTACK=false

# Controls (baseline: all pass/compliant)

## CORE

# CCC.C01 – TLS/SSH enforcement (set true in failing posture to expose 0.0.0.0/0)
CCC_C01_ALLOW_WORLD_TLS_INGRESS=false

# CCC.C02 – Encryption at rest sample bucket
ENABLE_SAMPLE_ENCRYPTED_BUCKET=true
ENABLE_UNENCRYPTED_BUCKET=false
REQUIRE_KMS_ENCRYPTION=true

# CCC.C03 – Demo admin role MFA enforcement
ENFORCE_MFA_DEMO_ADMIN_ROLE=true
DEMO_ADMIN_ROLE_NAME=ccc-demo-admin

# CCC.C04 – Core audit logging (CloudTrail)
ENABLE_CORE_AUDIT_LOGS=true
CLOUDTRAIL_LOGS_ROLE_NAME=

# CCC.C07 – Enumeration alerts (CloudWatch metric filter/alarm)
ENABLE_ENUMERATION_ALERTS=true

# CCC.C05 – Network allowlists (shared baseline for core and VPC checks)
ALLOWED_INGRESS_CIDRS_CSV=10.0.0.0/16,10.10.0.0/24,10.20.0.0/27,10.30.0.0/25,10.40.0.0/28,10.50.0.1/32,10.60.0.1/32
ALLOWED_INGRESS_IPV6_CIDRS_CSV=
ALLOWED_INGRESS_SECURITY_GROUPS_CSV=

# CCC.C05 Benchmark reference (do not modify for demos; sourced from CCC catalog)
CCC_BENCHMARK_ALLOWED_INGRESS_CIDRS=10.0.0.0/16,10.10.0.0/24,10.20.0.0/27,10.30.0.0/25,10.40.0.0/28,10.50.0.1/32,10.60.0.1/32
CCC_BENCHMARK_ALLOWED_INGRESS_IPV6=
CCC_BENCHMARK_ALLOWED_INGRESS_SGS=

# CCC.C06 – Allowed regions (deployment & replication baseline)
ALLOWED_REGIONS_CSV=ap-northeast-1

# CCC.C06 Benchmark reference (do not modify for demos; sourced from CCC catalog)
CCC_BENCHMARK_ALLOWED_REGIONS=ap-northeast-1

# CCC.C07 Benchmark reference (do not modify for demos; sourced from CCC catalog)
CCC_BENCHMARK_ENABLE_ENUMERATION_ALERTS=true

# CCC.C08 – Multi-AZ replication (no IaC toggle yet)
CCC_C08_PUBLIC_SUBNET_AZ=ap-northeast-1a
CCC_C08_PRIVATE_SUBNET_AZ=ap-northeast-1c

# CCC.C09 – Access log protection
ENABLE_FLOW_LOG_PROTECTION=true
FLOW_LOG_RETENTION_DAYS=90

# CCC.C10 – Trusted replication destinations (baseline keeps replica in-region)
ENABLE_REPLICATION_DEMO=true
REPLICATION_DESTINATION_REGION=ap-northeast-1
ALLOWED_REPLICATION_ACCOUNTS_CSV=999999999999
ALLOWED_REPLICATION_BUCKETS_CSV=
ALLOWED_REPLICATION_REGIONS_CSV=ap-northeast-1

# CCC.C11 – Key management policies (baseline enforces rotation)
ENABLE_CMEK_DEMO=true
ENFORCE_CMEK_ROTATION=true
REQUIRE_CMEK_ROTATION=true

# CCC.C12 – Secure network access rules (baseline enforces allowlist-only ingress)
CCC_C12_ENFORCE_STRICT_NETWORK_ACCESS=true



## VPC-specific overlays

# CCC.VPC.C01 – Manage default VPC (set true to simulate failure)
MANAGE_DEFAULT_VPC=false


# CCC.VPC.C02 – Prevent auto public IPs
PUBLIC_SUBNET_AUTO_ASSIGN_PUBLIC_IP=false
ASSOCIATE_PUBLIC_IP_WEB_INSTANCE=false
# Demo workload toggle (set true when EC2 instance is required for demos)
CREATE_WEB_INSTANCE=false


# CCC.VPC.C03 – Restrict VPC peering to allowed accounts/VPCs/regions
CREATE_DEMO_VPC_PEERING=false
ALLOWED_VPC_PEER_ACCOUNTS_CSV=88888888888
ALLOWED_VPC_PEER_VPCS_CSV=
ALLOWED_VPC_PEER_REGIONS_CSV=ap-northeast-1


# CCC.VPC.C04 – Enforce VPC Flow Logs
ENABLE_VPC_FLOW_LOGS=true
